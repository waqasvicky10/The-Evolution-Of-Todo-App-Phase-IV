# Phase III Environment Variables
# Copy this file to .env and fill in the values

# OpenAI API Configuration (Required for Phase III Agent)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4  # or gpt-4-turbo, gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Phase II Database (Existing - Streamlit SQLite)
DATABASE_PATH=todo.db

# Phase II Backend FastAPI Configuration (Existing)
# Backend database for FastAPI endpoints
BACKEND_DATABASE_URL=sqlite:///./backend_todo.db
# Or use PostgreSQL: postgresql://user:password@host/dbname

# Security (Existing from Phase II)
SECRET_KEY=your-secret-key-at-least-32-characters-long-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# Environment
ENVIRONMENT=development

# MCP Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=5000

# Chat API Configuration
CHAT_ENDPOINT_PATH=/api/chat
CONVERSATION_HISTORY_LIMIT=50

# Logging
LOG_LEVEL=INFO
LOG_FILE=phase3_app.log

# Optional: Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Optional: Session Configuration
SESSION_SECRET_KEY=another-secret-key-for-sessions-change-this
SESSION_EXPIRE_HOURS=24
